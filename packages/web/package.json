{
  "name": "@zenncore/web",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo dist node_modules",
    "lint": "biome check --write --unsafe"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "@tanstack/react-table": "^8.21.3",
    "@zenncore/form": "workspace:*",
    "@zenncore/data-table": "workspace:*",
    "@zenncore/icons": "workspace:*",
    "@zenncore/phone": "workspace:*",
    "@zenncore/utils": "workspace:*",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-hook-form": "catalog:"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@zenncore/tsdown-config": "workspace:*",
    "@zenncore/tailwind-config": "workspace:*",
    "@zenncore/ts-config": "workspace:*",
    "tailwindcss": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "exports": {
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js"
    },
    "./tailwind-config": "./src/config/tailwind/globals.css",
    "./ts-config": "./src/config/typescript/config.json"
  }
}
